<h4 class='d-flex justify-content-between mb-4'>
  <span>My Blog Posts</span>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
</h4>

<% @posts.each do |post| %>
  <%= link_to edit_post_path(post), class: 'text-decoration-none' do %>
    <div class="card mb-3 post-card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-2">
            <% if post.header_image.present? %>
              <%= image_tag(post.header_image, width: '80%', height: '80%') %>
            <% end %>
          </div>
          <div class="col-md-10">
            <% if post.published? %>
              <span class="badge bg-primary">Published</span>
            <% else %>
              <span class="badge bg-secondary">Unpublished</span>
            <% end %>
            <h5 class='card-title text-dark mb-1'><%= post.title %></h5>
            <p class='text-secondary mb-0'><%= post.description %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
